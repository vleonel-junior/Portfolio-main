---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<h3
    class="text-2xl font-serif font-bold text-quartz dark:text-quartz-light mb-8 flex items-center justify-center gap-4 w-full"
>
    <span class="h-px flex-1 bg-gray-300 dark:bg-gray-700"></span>
    <span class="whitespace-nowrap">{title}</span>
    <span class="h-px flex-1 bg-gray-300 dark:bg-gray-700"></span>
</h3>
