---
const navItems = [
  { name: "Resume", href: `${import.meta.env.BASE_URL}#about` },
  { name: "Projects", href: `${import.meta.env.BASE_URL}projects` },
  { name: "Blog", href: `${import.meta.env.BASE_URL}blog` },
];
---

<header
  class="fixed top-0 w-full z-50 bg-quartz/80 backdrop-blur-md border-b border-border-primary transition-colors duration-300"
>
  <div class="container-custom h-16 flex items-center justify-between">
    <!-- Logo - Image only on mobile, full name on desktop -->
    <a href={import.meta.env.BASE_URL} class="flex items-center gap-3">
      <img
        src={`${import.meta.env.BASE_URL}logo.jpg`}
        alt="Logo"
        class="h-10 w-10 object-cover rounded-full flex-shrink-0"
      />
      <span
        class="text-sm sm:text-lg font-serif font-bold tracking-tight text-white truncate max-w-[150px] xs:max-w-none"
      >
        LÃ©onel VODOUNOU
      </span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-6">
      {
        navItems.map((item) => {
          const itemPath = item.href.startsWith("/#") ? "/" : item.href;
          const isActive =
            Astro.url.pathname === itemPath ||
            (itemPath !== "/" && Astro.url.pathname.startsWith(itemPath));
          return (
            <a
              href={item.href}
              class:list={[
                "text-sm font-medium transition-colors",
                isActive
                  ? "text-white font-bold"
                  : "text-quartz-light/60 hover:text-white",
              ]}
            >
              {item.name}
            </a>
          );
        })
      }
    </nav>

    <div class="flex items-center gap-1">
      <!-- Theme Toggle -->
      <button
        id="theme-toggle"
        class="p-2 rounded-full hover:bg-white/10 transition-colors"
        aria-label="Toggle Theme"
      >
        <svg
          id="theme-toggle-light-icon"
          class="hidden w-5 h-5 text-quartz-light"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
          ></path>
        </svg>
        <svg
          id="theme-toggle-dark-icon"
          class="hidden w-5 h-5 text-quartz-light"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
          ></path>
        </svg>
      </button>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden text-quartz-light p-2 relative z-[70]"
        aria-label="Menu"
      >
        <svg
          id="menu-open-icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
        <svg
          id="menu-close-icon"
          class="hidden w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<!-- Mobile Menu Overlay - Outside Header for Stacking Context -->
<div id="mobile-menu" class="fixed inset-0 z-[60] pointer-events-none">
  <!-- Backdrop -->
  <div
    id="mobile-menu-backdrop"
    class="absolute inset-0 bg-black/60 opacity-0 transition-opacity duration-300"
  >
  </div>

  <!-- Menu Panel -->
  <div
    id="mobile-menu-panel"
    class="absolute top-0 right-0 h-full w-72 bg-quartz transform translate-x-full transition-transform duration-300 shadow-2xl border-l border-white/10"
  >
    <nav class="flex flex-col p-8 gap-2 mt-20">
      {
        navItems.map((item) => {
          const itemPath = item.href.startsWith("/#") ? "/" : item.href;
          const isActive =
            Astro.url.pathname === itemPath ||
            (itemPath !== "/" && Astro.url.pathname.startsWith(itemPath));
          return (
            <a
              href={item.href}
              class:list={[
                "mobile-menu-link py-4 px-6 rounded-xl text-lg font-medium transition-all duration-200",
                isActive
                  ? "text-white bg-white/10 font-bold translate-x-1"
                  : "text-quartz-light/60 hover:text-white hover:bg-white/5",
              ]}
            >
              {item.name}
            </a>
          );
        })
      }
    </nav>
  </div>
</div>

<script>
  // Desktop theme toggle
  const themeToggleBtn = document.getElementById("theme-toggle");
  const lightIcon = document.getElementById("theme-toggle-light-icon");
  const darkIcon = document.getElementById("theme-toggle-dark-icon");

  if (document.documentElement.classList.contains("dark")) {
    darkIcon?.classList.remove("hidden");
  } else {
    lightIcon?.classList.remove("hidden");
  }

  function toggleTheme() {
    lightIcon?.classList.toggle("hidden");
    darkIcon?.classList.toggle("hidden");

    if (document.documentElement.classList.contains("dark")) {
      document.documentElement.classList.remove("dark");
      localStorage.setItem("theme", "light");
    } else {
      document.documentElement.classList.add("dark");
      localStorage.setItem("theme", "dark");
    }
  }

  themeToggleBtn?.addEventListener("click", toggleTheme);

  // Mobile menu
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileMenuBackdrop = document.getElementById("mobile-menu-backdrop");
  const mobileMenuPanel = document.getElementById("mobile-menu-panel");
  const menuOpenIcon = document.getElementById("menu-open-icon");
  const menuCloseIcon = document.getElementById("menu-close-icon");

  function openMobileMenu() {
    mobileMenu?.classList.remove("pointer-events-none");
    mobileMenuBackdrop?.classList.remove("opacity-0");
    mobileMenuPanel?.classList.remove("translate-x-full");
    menuOpenIcon?.classList.add("hidden");
    menuCloseIcon?.classList.remove("hidden");
  }

  function closeMobileMenu() {
    mobileMenu?.classList.add("pointer-events-none");
    mobileMenuBackdrop?.classList.add("opacity-0");
    mobileMenuPanel?.classList.add("translate-x-full");
    menuOpenIcon?.classList.remove("hidden");
    menuCloseIcon?.classList.add("hidden");
  }

  mobileMenuBtn?.addEventListener("click", () => {
    if (mobileMenuPanel?.classList.contains("translate-x-full")) {
      openMobileMenu();
    } else {
      closeMobileMenu();
    }
  });

  mobileMenuBackdrop?.addEventListener("click", closeMobileMenu);

  // Close menu when clicking a link
  document.querySelectorAll(".mobile-menu-link").forEach((link) => {
    link.addEventListener("click", closeMobileMenu);
  });
</script>
